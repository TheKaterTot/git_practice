<h1>New User</h1>

<%= form_for @user do |f| %>
  <div>
  <%= f.label :name %>
  <p><%= f.text_field :name %></p>
  <%= f.label :email %>
  <p><%= f.email_field :email %></p>
  <%= f.label :password %>
  <p><%= f.password_field :password %></p>
  <%= f.label :password_confirmation %>
  <p><%= f.password_field :password_confirmation %></p>
  <p><%= f.submit %></p>
  </div>
  <% end %>
